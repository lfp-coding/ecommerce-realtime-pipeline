# Application
LOG_LEVEL=INFO
BATCH_SIZE=50

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CLIENT_ID=ecommerce-app
KAFKA_ORDER_TOPIC=orders
KAFKA_CUSTOMER_TOPIC=customers
KAFKA_PRODUCT_TOPIC=products
KAFKA_EVENT_TOPIC=events

# PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ecommerce_analytics
DB_USER=postgres
DB_PASSWORD=postgres

# Dashboard (Streamlit) – lokal
DASHBOARD_PORT=8501

# Monitoring (Platzhalter für spätere Aktivierung; keine Extradienste jetzt)
METRICS_ENABLED=false
HEALTHCHECK_INTERVAL_SECONDS=30
